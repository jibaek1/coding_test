{{>layout/header}}

<section class="auth container">
    <h1 class="page-title">회원가입</h1>

    <form class="join-form" action="/join" method="post" autocomplete="off">
        <div class="form-row">
            <label for="name">회원 이름</label>
            <input id="username" name="username" type="text" placeholder="홍길동" required>
        </div>
        
        <div class="form-row">
            <label for="age">나이</label>
            <input id="age" name="age" type="number" min="0" step="1" placeholder="예: 29" required>
        </div>

        <div class="form-row">
            <label for="loginId">로그인 아이디</label>
            <input id="loginId" name="loginId" type="text" placeholder="아이디를 입력하세요" required>
        </div>
        
        <div class="form-row">
            <label for="password">패스워드</label>
            <input id="password" name="password" type="password" placeholder="비밀번호를 입력하세요" required>
        </div>

        <div class="form-row">
            <label for="email">이메일</label>
            <input id="email" name="email" type="email" placeholder="you@example.com" required>
        </div>

        <button type="submit" class="btn primary">회원가입</button>
    </form>

    <div class="signin">
        <span>이미 계정이 있으신가요?</span>
        <a class="btn link" href="/login-form">로그인</a>
    </div>
</section>

<style>
    .container { max-width: 520px; margin: 40px auto; padding: 0 16px; }
    .page-title { font-size: 24px; margin-bottom: 16px; text-align:center; }
    .alert { margin-bottom: 12px; padding: 10px 12px; background:#fff3f3; color:#b00020; border:1px solid #ffdddd; border-radius:8px; }
    .join-form { display:flex; flex-direction:column; gap:12px; }
    .form-row { display:flex; flex-direction:column; gap:6px; }
    .form-row input { width:100%; padding:10px 12px; border:1px solid #ddd; border-radius:8px; font-size:15px; box-sizing:border-box; }
    .btn { display:inline-block; padding:10px 14px; border-radius:10px; border:1px solid #ddd; background:#f8f8f8; cursor:pointer; text-decoration:none; }
    .btn.primary { background:#222; color:#fff; border-color:#222; text-align:center; }
    .signin { margin-top:16px; text-align:center; }
</style>

{{>layout/footer}}