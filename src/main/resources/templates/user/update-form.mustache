{{>layout/header}}

<section class="auth container">

    <form class="update-form" action="/update" method="post" autocomplete="off">
        <div class="form-row">
            <label for="username">이름</label>
            <input id="username" name="username" type="text" value="{{user.username}}" required>
        </div>

        <div class="form-row">
            <label for="age">나이</label>
            <input id="age" type="number" value="{{user.age}}" readonly>
        </div>

        <div class="form-row">
            <label for="loginId">로그인 아이디</label>
            <input id="loginId" type="text" value="{{user.loginId}}" readonly>
        </div>

        <div class="form-row">
            <label for="email">이메일</label>
            <input id="email" name="email" type="text" value="{{user.email}}" required>
        </div>

        <div class="form-row">
            <label for="password">비밀번호</label>
            <input id="password" name="password" type="password" placeholder="새 비밀번호를 입력하세요" required>
        </div>

        <button type="submit" class="btn primary">수정하기</button>
    </form>
</section>

<style>
    .container { max-width: 520px; margin: 40px auto; padding: 0 16px; }
    .page-title { font-size: 24px; margin-bottom: 16px; text-align:center; }
    .alert { margin-bottom: 12px; padding: 10px 12px; background:#fff3f3; color:#b00020; border:1px solid #ffdddd; border-radius:8px; }
    .alert.success { background:#f3fff3; color:#007b00; border-color:#bbffbb; }
    .update-form { display:flex; flex-direction:column; gap:12px; }
    .form-row { display:flex; flex-direction:column; gap:6px; }
    .form-row input { padding:10px 12px; border:1px solid #ddd; border-radius:8px; font-size:15px; box-sizing:border-box; }
    .form-row input[readonly] { background:#f9f9f9; color:#666; }
    .btn.primary { background:#222; color:#fff; border:none; border-radius:8px; padding:10px; cursor:pointer; }
</style>

{{>layout/footer}}