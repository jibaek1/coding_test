{{>layout/header}}

<section class="board-list container">
    <h1 class="page-title">게시판</h1>

    {{^boardList}}
        <div class="empty">등록된 게시글이 없습니다.</div>
    {{/boardList}}

    {{#boardList}}
        <table class="table">
            <thead>
            <tr>
                <th style="width:60%">제목</th>
                <th style="width:20%">작성자</th>
                <th style="width:20%">작성일</th>
            </tr>
            </thead>
            <tbody>
            {{#boardList}}
                <tr>
                    <td class="title"><a class="title-link" href="/board/{{id}}">{{title}}</a></td>
                    <td class="author">{{user.username}}</td>
                    <td class="created">{{createAt}}</td>
                </tr>
            {{/boardList}}
            </tbody>
        </table>
    {{/boardList}}

    {{#sessionUser}}
        <div class="actions-bottom"><a class="btn-write" href="/save-form">+ 글쓰기</a></div>
    {{/sessionUser}}
</section>

<style>
    .container{max-width:960px;margin:32px auto;padding:0 16px}
    .page-title{font-size:24px;margin-bottom:16px}
    .table{width:100%;border-collapse:separate;border-spacing:0}
    .table th{background:#fafafa;border-bottom:1px solid #eaeaea;padding:12px;text-align:left}
    .table td{padding:12px;border-bottom:1px solid #f1f1f1}
    .title-link{color:#111;text-decoration:none}
    .title-link:hover{text-decoration:underline}
    .empty{padding:24px;color:#666;background:#fafafa;border:1px dashed #e5e5e5;border-radius:8px;text-align:center}
    .actions-bottom{display:flex;justify-content:flex-end;margin-top:16px}
    .btn-write{display:inline-block;padding:10px 16px;font-size:15px;font-weight:600;color:#fff;background:#007bff;border:1px solid #007bff;border-radius:6px;text-decoration:none}
    .btn-write:hover{background:#0056b3;border-color:#0056b3}
</style>

{{>layout/footer}}
