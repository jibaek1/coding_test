{{>layout/header}}

<section class="board-detail container">
    <header class="detail-header">
        <h1 class="title">{{board.title}}</h1>
        <div class="meta">
            <span class="author">{{board.user.username}}</span>
            <span class="dot">·</span>
            <span class="date">{{board.createAt}}</span>
        </div>
    </header>

    <article class="content">
        {{#board.content}}
            <div class="content-body">{{.}}</div>
        {{/board.content}}
    </article>

    <div class="actions">
        <a class="btn" href="/">목록</a>
        {{#board.boardOwner}}
            <a class="btn primary" href="/board/{{board.id}}/update-form">수정</a>
            <form class="inline" action="/board/{{board.id}}/delete" method="post">
                <button type="submit" class="btn danger">삭제</button>
            </form>
        {{/board.boardOwner}}
    </div>
</section>

<style>
    .container { max-width: 960px; margin: 32px auto; padding: 0 16px; }
    .detail-header { margin-bottom: 16px; }
    .title { font-size: 26px; font-weight: 700; margin: 0 0 8px; }
    .meta { color: #666; font-size: 14px; }
    .meta .dot { margin: 0 6px; }
    .content { background: #fff; border: 1px solid #eee; border-radius: 8px; padding: 16px; }
    .content-body { white-space: pre-wrap; line-height: 1.7; font-size: 16px; color: #222; }
    .actions { display: flex; gap: 8px; justify-content: flex-end; margin-top: 16px; }
    .inline { display: inline; }
    .btn { display:inline-block; padding:9px 14px; border:1px solid #ddd; border-radius:8px; background:#f8f8f8; color:#222; text-decoration:none; }
    .btn.primary { background:#222; color:#fff; border-color:#222; }
    .btn.danger { background:#ff4d4f; color:#fff; border-color:#ff4d4f; }
    .btn:hover { filter: brightness(0.98); }
</style>

{{>layout/footer}}
