{{>layout/header}}

<section class="board-list container">

    <div class="board-header">
        <h1 class="page-title">게시판</h1>
    </div>

    {{^boardList}}
        <div class="empty">등록된 게시글이 없습니다.</div>
    {{/boardList}}

    <table class="table">
        <thead>
        <tr>
            <th style="width: 60%">제목</th>
            <th style="width: 20%">작성자</th>
            <th style="width: 20%">작성일</th>
        </tr>
        </thead>
        <tbody>
        {{#boardList}}
            <tr class="row-item">
                <td class="title">
                    <a class="title-link" href="/board/{{id}}" title="{{title}}">{{title}}</a>
                </td>
                <td class="author">{{user.username}}</td>
                <td class="created">{{createAt}}</td>
            </tr>
        {{/boardList}}
        </tbody>
    </table>

    {{#sessionUser}}
        <div class="actions-bottom">
            <a class="btn-write" href="/save-form">+ 글쓰기</a>
        </div>
    {{/sessionUser}}

</section>

<style>
    .container { max-width: 960px; margin: 32px auto; padding: 0 16px; }
    .board-header { display:flex; justify-content:space-between; align-items:center; margin-bottom:16px; }
    .page-title { font-size: 24px; font-weight:600; }
    .actions-bottom { display: flex; justify-content: flex-end; margin-top: 20px; }
    .btn-write {
      display:inline-block;
      padding:10px 16px;
      font-size:15px;
      font-weight:600;
      color:#fff;
      background:#007bff;
      border:1px solid #007bff;
      border-radius:6px;
      text-decoration:none;
      box-shadow: 0 2px 5px rgba(0,0,0,0.1);
      transition: background .2s, box-shadow .2s;
    }
    .btn-write:hover { background:#0056b3; box-shadow: 0 3px 8px rgba(0,0,0,0.15); }
    .table { width:100%; border-collapse:separate; border-spacing:0; }
    .table thead th {
      font-weight:600;
      background:#fafafa;
      border-bottom:1px solid #eaeaea;
      padding:12px;
      text-align:left;
    }
    .table tbody td {
      padding:12px;
      border-bottom:1px solid #f1f1f1;
      vertical-align:middle;
    }
    .table tbody tr:nth-child(even) { background:#fcfcfc; }
    .table tbody tr:hover { background:#f5f9ff; }
    .title { max-width:0; }
    .title-link {
      display:inline-block;
      max-width:100%;
      color:#111;
      text-decoration:none;
      white-space:nowrap;
      overflow:hidden;
      text-overflow:ellipsis;
    }
    .title-link:hover { text-decoration:underline; }
    .author { color:#444; }
    .created { color:#666; font-variant-numeric: tabular-nums; }
    .empty {
      padding:24px;
      color:#666;
      background:#fafafa;
      border:1px dashed #e5e5e5;
      border-radius:8px;
      text-align:center;
    }
</style>

{{>layout/footer}}
